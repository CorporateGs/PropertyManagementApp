# =============================================================================
# Property Management CRM - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control!

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/property_management?schema=public"
# Example: DATABASE_URL="postgresql://postgres:mysecretpassword@localhost:5432/property_crm_dev?schema=public"

# NextAuth.js Configuration
NEXTAUTH_SECRET="your-super-secret-32-character-string-here"
# Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
# For production: NEXTAUTH_URL="https://your-domain.com"

# Node Environment
NODE_ENV="development"
# Options: development, production, test

# =============================================================================
# AI SERVICES
# =============================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
# Get from: https://console.anthropic.com/
# Note: Get free tier API key for testing from Anthropic console

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe (Optional - for online payments)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
# Get from: https://dashboard.stripe.com/apikeys

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
DEFAULT_FROM_EMAIL="noreply@your-domain.com"
# For Gmail, use App Passwords: https://myaccount.google.com/apppasswords

# Twilio (Optional - for SMS)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"
TWILIO_WHATSAPP_NUMBER="+1234567890"
# Get from: https://www.twilio.com/console

# =============================================================================
# INTEGRATIONS (Optional)
# =============================================================================

# QuickBooks
QUICKBOOKS_CLIENT_ID="your-quickbooks-client-id"
QUICKBOOKS_CLIENT_SECRET="your-quickbooks-client-secret"
# Get from: https://developer.intuit.com/app/developer/qbo/docs/develop/authentication-and-authorization/oauth-2.0

# DocuSign
DOCUSIGN_INTEGRATION_KEY="your-docusign-integration-key"
DOCUSIGN_SECRET_KEY="your-docusign-secret-key"
# Get from: https://developers.docusign.com/

# =============================================================================
# BLOCKCHAIN & SECURITY
# =============================================================================

# Blockchain Configuration
BLOCKCHAIN_SECRET="your-64-character-random-secret-for-blockchain-hmac"
# Generate with: openssl rand -hex 32

SIGNATURE_SECRET="your-64-character-random-secret-for-digital-signatures"
# Generate with: openssl rand -hex 32

# Blockchain Network Configuration
BLOCKCHAIN_NETWORK="testnet"
# Options: testnet, mainnet, local
BLOCKCHAIN_RPC_URL=""
# Custom RPC endpoint (leave empty for default)
# Note: Use testnet for development

# =============================================================================
# FINANCIAL
# =============================================================================

# Tax Information (Optional)
COMPANY_TIN="12-3456789"
# Your company Tax ID for 1099 generation

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_AI_FEATURES="true"
ENABLE_BLOCKCHAIN="false"
ENABLE_INTEGRATIONS="true"
# Note: Disable expensive features in development

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================

# Redis (Optional - for production caching and queues)
REDIS_URL="redis://localhost:6379"
# For production: REDIS_URL="redis://username:password@your-redis-host:6379"

QUEUE_TYPE="memory"
# Options: memory, redis
# Note: Use Redis for production

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-bucket-name"

# Google Cloud Storage (Alternative to S3)
GOOGLE_CLOUD_PROJECT_ID="your-project-id"
GOOGLE_CLOUD_KEY_FILE="path/to/service-account-key.json"
GCS_BUCKET_NAME="your-gcs-bucket"

# Storage Configuration
STORAGE_TYPE="local"
# Options: local, s3, gcs
# Note: Configure cloud storage for production

# Sentry (Optional - for error tracking)
SENTRY_DSN="https://your-sentry-dsn-here"
# Get from: https://sentry.io/

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Enable debug logging
DEBUG="property-management:*"

# Mock external services (for development)
MOCK_EXTERNAL_APIS="true"
# Set to "false" to use real APIs in development

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit this file with actual values to version control
# 2. Use different values for development, staging, and production
# 3. Rotate secrets regularly
# 4. Use strong, randomly generated values
# 5. Store secrets securely in production (AWS Secrets Manager, etc.)
# 6. Generate secure secrets using: openssl rand -base64 32 for NEXTAUTH_SECRET
# 7. Use environment-specific values (dev, staging, prod)
# =============================================================================
